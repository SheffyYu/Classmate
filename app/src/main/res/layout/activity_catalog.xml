<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_catalog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sheffy.classmate.CatalogActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:theme="@style/AppTheme" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txv_title"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="@string/myClassmate"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19sp"/>

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_color_item_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/color_item"
        android:adjustViewBounds="true"
        android:layout_below="@id/title_bar"/>


    <ImageView
        android:id="@+id/iv_color_item_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/color_item"
        android:layout_alignParentBottom = "true"
        android:adjustViewBounds="true"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list_name"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/iv_color_item_top"
        android:layout_above="@id/iv_color_item_bottom"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_item"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@id/iv_color_item_bottom"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        app:fabSize="normal"
        android:src="@mipmap/add_no_boder"
        app:backgroundTint="@color/colorGreen" />


</RelativeLayout>
