<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.sheffy.classmate.MyFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--头像部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorGreen">
            <!--圆形头像-->
            <circleimageview.CircleImageView
                android:id="@+id/user_favicon_my"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/default_user"
                app:border_color="@color/white"
                app:border_width="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"/>

            <TextView
                android:id="@+id/txv_user_name_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_line"
            android:showDividers="middle|end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_change_favicon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="修改头像"
                android:textSize="@dimen/text_my"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/txv_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textSize="@dimen/text_my"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/txv_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="反馈意见"
                android:textSize="@dimen/text_my"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/txv_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:textSize="@dimen/text_my"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/txv_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="版本号v1.0"
                android:textSize="@dimen/text_my"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/txv_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="注销"
                android:textSize="@dimen/text_my"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
