<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_regist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorBule"
    tools:context="com.example.sheffy.classmate.RegistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <circleimageview.CircleImageView
            android:id="@+id/user_imag"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:border_color="@color/white"
            app:border_width="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="45dp"
            android:background="@color/white">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_name"
                android:textSize="18sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/edt_user_name_regist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="text"
                android:maxEms="10"
                android:maxLines="1"
                android:hint="1~20位"
                android:textColorHint="@color/hint"
                android:theme="@style/EditText"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:background="@color/white">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/password"
                android:textSize="18sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/edt_password_regist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="textPassword"
                android:maxEms="16"
                android:hint="6~20位"
                android:maxLines="1"
                android:textColorHint="@color/hint"
                android:theme="@style/EditText"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:background="@color/white">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/password"
                android:textSize="18sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/edt_password_again_regist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="textPassword"
                android:maxEms="16"
                android:hint="@string/passwordAgain"
                android:maxLines="1"
                android:textColorHint="@color/hint"
                android:theme="@style/EditText"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_regist"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/regist"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_shape" />

    </LinearLayout>

</RelativeLayout>
